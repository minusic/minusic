{
  "name": "minusic",
  "description": "Advanced HTML5 audio player designed to elevate the listening experience",
  "version": "0.0.1",
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write \"./{demo,src,tests}/**/*.{ts,html,js,css}\"",
    "lint": "eslint .",
    "test": "npm run test:build && npm run test:unit",
    "test:build": "tsup --config tsup.test.config.ts",
    "test:unit": "node --test './build-tests/**/*.test.*'"
  },
  "keywords": [
    "Music Player",
    "Sound Visualizer",
    "Audio Speed Control",
    "HTML5 audio",
    "Interactive Player",
    "Waveform Visualizer",
    "Playlist Management",
    "Audio effects",
    "Playlist Management"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/minusic/minusic.git",
    "directory": "minusic"
  },
  "bugs": {
    "url": "https://github.com/minusic/minusic/issues"
  },
  "homepage": "https://github.com/minusic/minusic#readme",
  "author": "Minusic",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.4.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "@eslint/js": "^9.23.0",
    "eslint": "^9.23.0",
    "typescript-eslint": "^8.28.0"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": false,
    "bracketSpacing": true,
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "strict",
    "semi": false
  }
}
